; # active modules definition #####################################################################

[module/seperator]
type = custom/text
content = |


[module/date]
type = internal/date
format =  <label>
date = %a. %H:%M %e/%m
interval = 60.0


[module/battery]
type = custom/script
label = %output%
exec = $HOME/scripts/polybar/battery.sh
click-left= $HOME/scripts/polybar/battery.sh clickevent
interval = 300


[module/updates]
type = custom/script
label = %output%
exec = $HOME/scripts/polybar/updates.sh
click-left = $HOME/scripts/polybar/updates.sh clickevent
tail=true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 5
label-mode-foreground = #000
label-mode-background = #268bd2

ws-icon-0 = 1;Home
