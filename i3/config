### System (re)start ###

  # initialize home screen
  exec bash /home/quizznor/.config/scripts/mv-home.sh

  # set background image
  exec --no-startup-id feh --bg-fill /home/quizznor/documents/background.png

  # launch xautolock (screensaver)
  exec bash /home/quizznor/.config/scripts/lockscreen.sh
  
  # start compton
  exec --no-startup-id compton --config ~/.config/picom/picom.ini

  # start usb automounting
  exec --no-startup-id udiskie

  # start touchpad monitor
  exec --no-startup-id python /home/quizznor/.config/scripts/touchpad-monitor.py

  # (re)start polybar, dunst, compton and pulseaudio
  exec_always /home/quizznor/.config/scripts/polybar-launch.sh
  exec always /home/quizznor/.config/scripts/picom-restart.sh
  exec_always /home/quizznor/.config/scripts/dunst-restart.sh
  exec_always start-pulseaudio-x11

### Utility keys ###

  # change volume settings (using alsa & pacmd)
  bindsym XF86AudioRaiseVolume exec bash /home/quizznor/.config/scripts/set-volume.sh +
  bindsym XF86AudioLowerVolume exec bash /home/quizznor/.config/scripts/set-volume.sh -
  bindsym XF86AudioMute exec bash /home/quizznor/.config/scripts/set-volume.sh toggle

  # change screen brightness (using brightnessctl)
  bindcode 232 exec bash /home/quizznor/.config/scripts/set-brightness.sh -
  bindcode 233 exec bash /home/quizznor/.config/scripts/set-brightness.sh +

  # change pacmd audio sinks
  bindsym $mod+F1 exec bash /home/quizznor/.config/scripts/rofi-audiosink.sh

  # change screen projection mode
  bindsym $mod+p exec bash /home/quizznor/.config/scripts/rofi-screencast.sh

  # toggle playback and control playlist of mpv
  bindsym XF86AudioPlay exec bash /home/quizznor/.config/scripts/mpv-remote.sh toggle
  bindsym XF86AudioNext exec bash /home/quizznor/.config/scripts/mpv-remote.sh next
  bindsym XF86AudioPrev exec bash /home/quizznor/.config/scripts/mpv-remote.sh prev

### System modes ###

  # resize window (you can also use the mouse for that)
  mode "resize" {
          bindsym Left resize shrink width 1 px or 1 ppt
          bindsym Down resize grow height 1 px or 1 ppt
          bindsym Up resize shrink height 1 px or 1 ppt
          bindsym Right resize grow width 1 px or 1 ppt

          # back to normal: Enter or Escape or $mod+r
          bindsym Return mode "default"
          bindsym Escape mode "default"
          bindsym $mod+r mode "default"
  }

  bindsym $mod+r mode "resize"
