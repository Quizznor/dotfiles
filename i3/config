exec --no-startup-id feh --bg-fill /home/quizznor/Documents/background.png
exec --no-startup-id xautolock -corners +00- -cornerdelay 0 -cornerredelay 4 -time 2 -locker "$HOME/.config/scripts/lockscreen.sh --nofork -- scrot -z -o -d 1"

# assign certain programs to certain workspaces
assign [Class=firefox] $ws2
assign [Class=Atom] $ws3
assign [title="Open File"] $ws3

# resize "Open File" windows
for_window [title="Open File"] resize set 800 450

# resize xev window
for_window [title="Event Tester"] floating enable

#resize and adjust the window to change audiosinks
for_window [title="floatterm"] floating enable
for_window [title="floatterm"] resize set 1000 500

# enable floating for Python plots
for_window [Class="Matplotlib"] floating enable

# start compton
exec --no-startup-id compton --config=/home/quizznor/.config/picom/picom.ini

# (re)start polybar, dunst and compton
